<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
        <corners android:radius="7dp" />
      	<gradient
          	android:startColor="#DADADA"
          	android:centerColor="#E1E1E1"
          	android:endColor="#DADADA"
          	android:angle="45"
          	android:type="linear" />
      	<stroke
          	android:width="1dp"
          	android:color="#DADADA" />
      	<padding
         	android:left="10dp"
          	android:top="10dp"
          	android:right="10dp"
          	android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
        <corners android:radius="7dp" />
      	<gradient
          	android:startColor="#E1E1E1"
          	android:centerColor="#E9E9E9"
          	android:endColor="#E1E1E1"
          	android:angle="45"
          	android:type="linear" />
      	<stroke
          	android:width="1dp"
          	android:color="#E1E1E1" />
      	<padding
         	android:left="10dp"
          	android:top="10dp"
          	android:right="10dp"
          	android:bottom="10dp" />
    </shape>
  </item>
</selector>