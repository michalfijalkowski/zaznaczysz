<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      	<gradient
          	android:startColor="#E8E8E8"
          	android:centerColor="#F7F7F7"
          	android:endColor="#E8E8E8"
          	android:angle="45"
          	android:type="linear" />
      	<stroke
          	android:width="1dp"
          	android:color="#E8E8E8" />
      	<padding
         	android:left="10dp"
          	android:top="10dp"
          	android:right="10dp"
          	android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      	<gradient
          	android:startColor="#EFEFEF"
          	android:centerColor="#FEFEFE"
          	android:endColor="#EFEFEF"
          	android:angle="45"
          	android:type="linear" />
      	<stroke
          	android:width="1dp"
          	android:color="#E8E8E8" />
      	<padding
          	android:left="10dp"
          	android:top="10dp"
          	android:right="10dp"
          	android:bottom="10dp" />
    </shape>
  </item>
</selector>