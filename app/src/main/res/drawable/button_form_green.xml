<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
        <corners android:radius="7dp" />
      	<gradient
          	android:startColor="#8cd9b3"
          	android:centerColor="#b3e6cc"
          	android:endColor="#8cd9b3"
          	android:angle="45"
          	android:type="linear" />
      	<stroke
          	android:width="1dp"
          	android:color="#79d2a6" />
      	<padding
         	android:left="10dp"
          	android:top="10dp"
          	android:right="10dp"
          	android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
        <corners android:radius="7dp" />
      	<gradient
          	android:startColor="#b3e6cc"
          	android:centerColor="#c6ecd9"
          	android:endColor="#b3e6cc"
          	android:angle="45"
          	android:type="linear" />
      	<stroke
          	android:width="1dp"
          	android:color="#8cd9b3" />
      	<padding
         	android:left="10dp"
          	android:top="10dp"
          	android:right="10dp"
          	android:bottom="10dp" />
    </shape>
  </item>
</selector>