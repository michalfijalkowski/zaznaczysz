<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <gradient
          android:startColor="#207cca"
          android:endColor="#7db9e8"
          android:angle="45" />
      <corners 
          android:radius="7dp"/>
      <stroke
          android:width="1dp"
          android:color="#7db9e8" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#3A89C9"
          android:endColor="#7db9e8"
          android:angle="45" />
      <corners 
          android:radius="7dp"/>
      <stroke
          android:width="1dp"
          android:color="#7db9e8" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>